<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FontIconApp"
             xmlns:userControls="clr-namespace:FontIconApp.UserControls;assembly=FontIconApp"
             x:Class="FontIconApp.MainPage">

    <StackLayout HorizontalOptions="Center"
                 VerticalOptions="Center">
        <userControls:FontAwesomeLabel Text="{x:Static userControls:Icon.FAMusic}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontSize="18"
                                       TextColor="CornflowerBlue"
                                       />
        <userControls:FontAwesomeLabel Text="{x:Static userControls:Icon.FAEnvelopeO}"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontSize="24"
                                       TextColor="Red"
                                       />
    </StackLayout>


</ContentPage>